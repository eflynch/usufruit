# Environment Configuration Template
# Copy this to .env and fill in your values for your environment

# === DEVELOPMENT CONFIGURATION (SQLite) ===
# DATABASE_URL="file:./dev.db"
# NEXTAUTH_SECRET="development-secret-key-not-for-production"
# NEXTAUTH_URL="http://localhost:3000"

# === PRODUCTION CONFIGURATION (PostgreSQL) ===
# Database Configuration
DATABASE_URL=postgresql://usufruit:YOUR_DB_PASSWORD@postgres:5432/usufruit

# Authentication Configuration
NEXTAUTH_SECRET=YOUR_SECURE_RANDOM_STRING_HERE
NEXTAUTH_URL=http://yourdomain.com

# Application Configuration
NODE_ENV=production

# Optional: Email Configuration (for notifications)
# EMAIL_SERVER_HOST=smtp.gmail.com
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER=your-email@gmail.com
# EMAIL_SERVER_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourdomain.com

# Optional: File Upload Configuration
# MAX_FILE_SIZE=10485760  # 10MB in bytes
# UPLOAD_DIR=/app/uploads

# Optional: Rate Limiting
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds

# Optional: Logging
# LOG_LEVEL=info
# LOG_FILE=/app/logs/usufruit.log

# Optional: Backup Configuration
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=7
